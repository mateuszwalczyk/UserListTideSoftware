@page "{userId:int?}"
@model UserList.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edytowanie @Model.User.Name @Model.User.Surname</h2>

<form method="post">

    <input type="hidden" asp-for="User.Id" />
    <div class="form-group">
        <label asp-for="User.Name"></label>
        <input asp-for="User.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Surname"></label>
        <input asp-for="User.Surname" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Country"></label>
        <input asp-for="User.Country" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Country"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
        <span class="text-danger" asp-validation-for="User.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.DateOfBirthday"></label>
        <input asp-for="User.DateOfBirthday" class="form-control" />
        <span class="text-danger" asp-validation-for="User.DateOfBirthday"></span>
    </div>
    <div class="form-group">
        <label asp-for="User.Gender"></label>
        <select class="form-control" asp-for="User.Gender"
                asp-items="Model.Gender">
        </select>
        <span class="text-danger" asp-validation-for="User.Gender"></span>
    </div>
    <button type="submit" class="btn btn-dark">Zapisz</button>
</form>
